# Development Environment Configuration

# Frontend Port Configuration
# If not set, the system will automatically find an available port starting from 3000
FRONTEND_PORT=3000
# Alternative: VITE_PORT=3000

# Backend Port Configuration  
# If not set, the system will automatically find an available port starting from 3001
BACKEND_PORT=3001
# Alternative: PORT=3001

# API Configuration
# This will be automatically set by the dev script based on the backend port
# VITE_API_BASE_URL=http://localhost:3001

# Database Configuration
MONGODB_URI=your_mongodb_connection_string_here

# Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Scraping Configuration
ENABLE_SCRAPING=false

# Environment
NODE_ENV=development 